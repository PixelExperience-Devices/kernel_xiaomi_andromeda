# Platform
CONFIG_MACH_XIAOMI_SM8150=y

# Localversion
CONFIG_LOCALVERSION="-lineage"

# DTBO
CONFIG_BUILD_ARM64_DT_OVERLAY=y

# QCACLD
CONFIG_QCA_CLD_WLAN=y

# exFAT
CONFIG_EXFAT_FS=y

# pstore
CONFIG_CMDLINE="ramoops_memreserve=4M"
CONFIG_CMDLINE_EXTEND=y
CONFIG_PSTORE=y
CONFIG_PSTORE_CONSOLE=y
CONFIG_PSTORE_PMSG=y
CONFIG_PSTORE_RAM=y
CONFIG_BLK_WBT=y
CONFIG_BLK_WBT_SQ=y
CONFIG_MTD=y
CONFIG_MTD_BLOCK=y
CONFIG_MTD_OOPS=y
CONFIG_MTD_BLOCK2MTD=y

# Touchscreen
# CONFIG_TOUCHSCREEN_ST is not set

# IR
CONFIG_IR_SPI_MI=y
CONFIG_LIRC=y
CONFIG_RC_CORE=y
CONFIG_RC_DECODERS=y
CONFIG_MEDIA_RC_SUPPORT=y
CONFIG_RC_DEVICES=y

# Power
# CONFIG_SMB1355_SLAVE_CHARGER is not set
# CONFIG_SMB1390_CHARGE_PUMP_PSY is not set
CONFIG_SMB1390_CHARGE_PUMP=y

# spk-id
CONFIG_HAS_IOMEM=y
CONFIG_MFD_SPK_ID=y

# TEE
CONFIG_TRUSTY=y

# initramfs
CONFIG_INITRAMFS_IGNORE_SKIP_FLAG=y
